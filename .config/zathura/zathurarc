# Gruvbox Dark Colorscheme

set default-bg                  "#282828"
set default-fg                  "#504945"

set statusbar-fg                "#bdae93"
set statusbar-bg                "#504945"

set inputbar-bg                 "#282828"
set inputbar-fg                 "#7c6f54"

set notification-error-bg       "#cc241d"
set notification-error-fg       "#282828"

set notification-warning-bg     "#cc241d"
set notification-warning-fg     "#282828"

set highlight-color             "#d79921"
set highlight-active-color      "#458588"

set completion-highlight-fg     "#7c6f54"
set completion-highlight-bg     "#689d6a"

set completion-bg               "#7c6f54"
set completion-fg               "#689d6a"

set notification-bg             "#98971a"
set notification-fg             "#282828"

set recolor-lightcolor          "#282828"
set recolor-darkcolor           "#ebdbb2"
set recolor                     "true"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
set recolor-keephue             "true"

# Useful Keybinds
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
