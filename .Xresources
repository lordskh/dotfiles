! -----------------------------------------------------------------------------
! URxvt specific settings
! -----------------------------------------------------------------------------
! Perl extensions
URxvt.perl-ext-common: default,matcher,resize-font,clipboard-osc,searchable-scrollback
! Set font
URxvt*font: xft:Source Code Pro Medium:size=12
URxvt.letterSpace: -1
! Clicable URLs
URxvt.url-launcher: /usr/bin/xdg-open
gRxvt.matcher.button: 1
! Get rid of ugly scroll bar
URxvt.scrollBar: false
! Transparance
URxvt.transparent:   true
URxvt.shading:       15
! -----------------------------------------------------------------------------

